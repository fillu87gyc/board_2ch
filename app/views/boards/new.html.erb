<%= link_to "スレッド一覧に戻るnew" ,boards_path %>
<hr>
<% if @board.errors.any? %>
  <%= @board.errors.full_messages %>
<% end %>
<h1> boards create </h1>

<%= form_for @board do |f| %>
  <div>
    <div class="form--label">タイトル: </div>
    <div class="form--input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div>	
    <div class="form--label">作成者名: </div>		
    <div class="form--input">		
      <%= f.text_field :editor %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
